apiVersion: v1
kind: Service
metadata:
  name: neo4j-{{region1}}-mgmt
  labels:
    app: neo4j-{{region1}}
  namespace: {{namespace}}
spec:
  ports:
  - name: neo-data
    port: 7474
    targetPort: 7474
    nodePort: {{neo4j_region1_http_ext_port}}
  - name: neo-bolt
    port: 7687
    targetPort: 7687
    nodePort: {{neo4j_region1_bolt_ext_port}}
  selector:
    app: neo4j-{{region1}}
  type: NodePort # Or LoadBalancer in production w/ proper security
---
apiVersion: v1
kind: Service
metadata:
  # The required headless service for StatefulSets
  name: neo4j-{{region1}}
  labels:
    app: neo4j-{{region1}}
  namespace: {{namespace}}
spec:
  ports:
  - port: 7474
    name: http
  - port: 7687
    name: bolt
  clusterIP: None
  selector:
    app: neo4j-{{region1}}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: neo4j-{{region1}}-data-pv-claim
  labels:
    app: neo4j-{{region1}}
  namespace: {{namespace}}
spec:
  storageClassName: rook-block
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: neo4j-{{region1}}-logs-pv-claim
  labels:
    app: neo4j-{{region1}}
  namespace: {{namespace}}
spec:
  storageClassName: rook-block
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
---
apiVersion: apps/v1beta1
kind: StatefulSet
metadata:
  name: neo4j-{{region1}}
  namespace: {{namespace}}
spec:
  serviceName: "neo4j-{{region1}}"
  replicas: 1
  template:
    metadata:
      labels:
        app: neo4j-{{region1}}
        version: v1
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: zone
                operator: In
                values:
                - {{region1}}
              - key: db
                operator: Exists
      containers:
      - name: neo4j-{{region1}}
        image: neo4j:3.3.3
        env:
        - name: NEO4J_AUTH
          value: "{{neo4j_username}}/{{neo4j_password}}"
        - name: NEO4J_dbms_memory_heap_maxSize
          value: 8G
        - name: NEO4J_dbms_memory_pagecache_size
          value: 4G
        ports:
        - name: http
          containerPort: 7474
        - name: bolt
          containerPort: 7687
        volumeMounts:
        - name: neo4j-{{region1}}-persistent-data-storage
          mountPath: /data
        - name: neo4j-{{region1}}-persistent-logs-storage
          mountPath: /logs
      volumes:
      - name: neo4j-{{region1}}-persistent-data-storage
        persistentVolumeClaim:
          claimName: neo4j-{{region1}}-data-pv-claim
      - name: neo4j-{{region1}}-persistent-logs-storage
        persistentVolumeClaim:
          claimName: neo4j-{{region1}}-logs-pv-claim
